<% @apartment.errors.each do |att,msg|  %>
 <%=att%><%=": "%><%=msg%></br>
<% end %>
<%=form_for(@apartment, url: users_create_path ,:html => { :class => "form-horizontal"}) do |f|%>
<fieldset>
  <legend>New Apartment</legend>
  <%= f.hidden_field :owner_id, :value => current_user.id %>
  <div class="field">
	<%=f.label :name%><br/>
	<%=f.text_field :name%>
  </div>
  <div class="field">
	<%=f.label :address%><br/>
	<%=f.text_field :address%>
  </div> 
  <div class="field">
	<%=f.label :date_built%><br/>
	<%=f.date_select :date_built, :start_year => 1900, :end_year => 2050%>
  </div>
  <div class="field">
	<%=f.label :cost%><br/>
	<%=f.text_field :cost, :value => number_with_precision(f.object.cost,:precision => 2)%>
  </div> 
  <div class="field">
	<%=f.label :comments%><br/>
	<%= f.text_area :comments, class: "hogehoge", size: "30x10" %>
  </div>
  <div class="submit">
  	<%=f.submit "Add a new apartment", class: "btn btn-primary"%>
  </div>
</fieldset>
<%end%>