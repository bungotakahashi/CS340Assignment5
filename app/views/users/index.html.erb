<h2>Your apartments</h2>
<%if @apartment!=nil%>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Address</th>
      <th>Cost</th>
      <th>details</th>
      <th>delete</th>
    </tr>
  </thead>
  <tbody>
  	<% i=-1%>
    <% @apartment.each do |row| %>
    	<%i+=1%>

    	<%if i%4==0%>
    		<tr class="info">
    	<%elsif i%4==1%>
    	    <tr class="success">
    	<%elsif i%4==2%>
    	    <tr class="warning">
     	<%elsif i%4==3%>
    	    <tr class="danger">
    	<%end%>
    		<td><%=row.id%></td>
			 <td><%=row.name%></td>
			 <td><%=row.address%></td>
    		<td><%=row.cost%></td>
    		<td><%=link_to "details", users_details_path(:id => row.id)%></td>
    		<td><%=link_to "delete", users_destroy_path(:id => row.id),data: {confirm: "Are you sure?"}%></td>
		</tr>
	<% end %>
   </tbody>
</table>
<%end%>