<h1><%=@apartment.name%></h1>
<%if @apartment!=nil%>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Address</th>
      <th>Cost</th>
      <th>Date of Built</th>
      <th>Comments</th>
    </tr>
  </thead>
  <tbody>
    	<tr class="info">
    		<td><%=@apartment.id%></td>
			<td><%=@apartment.name%></td>
			<td><%=@apartment.address%></td>
    		<td><%=@apartment.cost%></td>
    		<td><%=@apartment.date_built%></td>
    		<td><%=@apartment.comments %></td>
		</tr>
   </tbody>
</table>
<%end%>