<h1><%=@apartment.name%></h1>
<%if @apartment!=nil%>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Address</th>
      <th>Cost</th>
      <th>Date of Built</th>
      <th>Comments</th>
    </tr>
  </thead>
  <tbody>
    	<tr class="info">
    		<td><%=@apartment.id%></td>
			<td><%=@apartment.name%></td>
			<td><%=@apartment.address%></td>
    		<td><%=@apartment.cost%></td>
    		<td><%=@apartment.date_built%></td>
    		<td><%=@apartment.comments %></td>
		</tr>
   </tbody>
</table>
<%end%>

<div class="row">
   	<div class="col-xs-3 col-sm-3 col-md-3">
        <%= link_to "Rooms", apartment_index_path(:id => @apartment.id), :class=> 'btn btn-success btn-block' %>
    </div>
   	<div class="col-xs-3 col-sm-3 col-md-3">
        <%= link_to "Residents", apartment_resident_path(:id => @apartment.id), :class=> 'btn btn-success btn-block' %>
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3">
        <%= link_to "Parking Lots", apartment_parking_path(:id => @apartment.id), :class=> 'btn btn-success btn-block' %>
    </div>

</div>